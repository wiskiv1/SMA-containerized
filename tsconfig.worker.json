{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "build",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@stock_market_anywhere/*": ["./src/stock_market_anywhere/*"]
    }
  },
  "include": ["src/stock_market_anywhere/**/*"],
  "exclude": ["node_modules", ".next"]
}
